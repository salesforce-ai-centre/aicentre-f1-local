# F1 Dual-Rig Telemetry Dashboard Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
FLASK_DEBUG=false

# ============================================================================
# SIM RIG 1 (RIG_A) CONFIGURATION
# ============================================================================
RIG_A_PORT=20777
RIG_A_DRIVER="Jacob Berry"
RIG_A_DEVICE_ID="SIM_A"
RIG_A_INDIVIDUAL_ID=""  # Optional: Individual identifier

# ============================================================================
# SIM RIG 2 (RIG_B) CONFIGURATION
# ============================================================================
RIG_B_PORT=20778
RIG_B_DRIVER="Chris Webb"
RIG_B_DEVICE_ID="SIM_B"
RIG_B_INDIVIDUAL_ID=""  # Optional: Individual identifier

# ============================================================================
# SALESFORCE DATA CLOUD INTEGRATION (Optional)
# ============================================================================
DATACLOUD_ENABLED=false

# Salesforce OAuth Configuration
SALESFORCE_DOMAIN=your-org.my.salesforce.com
SF_CLIENT_ID=your_connected_app_client_id
SF_USERNAME=your-salesforce-email@domain.com

# JWT Authentication
SF_PRIVATE_KEY_PATH=./config/private.key

# Data Cloud Ingestion Endpoints
DC_TELEMETRY_ENDPOINT=https://your-subdomain.c360a.salesforce.com/api/v1/ingest/sources/SOURCE_ID/STREAM_NAME
DC_EVENTS_ENDPOINT=https://your-subdomain.c360a.salesforce.com/api/v1/ingest/sources/SOURCE_ID/EVENTS
DC_SESSIONS_ENDPOINT=https://your-subdomain.c360a.salesforce.com/api/v1/ingest/sources/SOURCE_ID/SESSIONS
DC_PARTICIPANTS_ENDPOINT=https://your-subdomain.c360a.salesforce.com/api/v1/ingest/sources/SOURCE_ID/PARTICIPANTS
DC_MOTION_ENDPOINT=https://your-subdomain.c360a.salesforce.com/api/v1/ingest/sources/SOURCE_ID/MOTION

# ============================================================================
# AI RACE ENGINEER (Experimental - Currently Disabled)
# ============================================================================
AI_ENABLED=false
SF_CLIENT_SECRET=your_client_secret  # Required if AI_ENABLED=true

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/dashboard.log

# Performance
SEND_INTERVAL=0.01  # Packet send interval in seconds (0.01 = 10ms)
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25

# Display Limits
SPEED_GAUGE_MAX_KMH=350
RPM_GAUGE_MAX=15000

# Telemetry Thresholds
DAMAGE_THRESHOLD_PERCENT=15
TIRE_WEAR_CRITICAL_PERCENT=70
FUEL_LOW_LAPS_THRESHOLD=8

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================
# UDP Buffer Size (bytes)
UDP_BUFFER_SIZE=2048

# Allow localhost connections only (security)
ALLOW_REMOTE_CONNECTIONS=true  # Set to false for production

# ============================================================================
# NOTES
# ============================================================================
# 1. Get your host IP: Run `ifconfig` or `ipconfig` to find your local IP
# 2. Configure F1 Game:
#    Settings → Telemetry → UDP Telemetry: ON
#    UDP Port: 20777 (Rig A) / 20778 (Rig B)
#    UDP Broadcast: Your host IP address
# 3. Firewall: Allow UDP ports 20777 and 20778
# 4. Same Network: All devices must be on the same subnet
