{
  "manifest_version": 3,
  "name": "F1 Simulator Window Controller",
  "version": "1.0.0",
  "description": "Automatically switches between browser and F1 game for simulator control",
  "permissions": [
    "nativeMessaging",
    "storage"
  ],
  "host_permissions": [
    "http://172.18.159.209:8080/*",
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://172.18.159.209:8080/*",
        "http://localhost:8080/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
